# thirdweb Client ID from https://thirdweb.com/dashboard
VITE_THIRDWEB_CLIENT_ID=your_client_id_here

# Your wallet address that will receive payments
VITE_SELLER_WALLET=0xYourWalletAddress

# Blockchain network chain ID
# 8453 = Base Mainnet (recommended)
# 1 = Ethereum Mainnet
# 42161 = Arbitrum One
# 137 = Polygon
# 10 = Optimism
VITE_CHAIN_ID=8453

# Token contract address (optional)
# Leave empty for native token (ETH)
# USDC on Base: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
# USDC on Ethereum: 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
VITE_TOKEN_ADDRESS=

# Test amount in USD
VITE_AMOUNT=10.00
